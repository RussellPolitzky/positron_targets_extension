{
	"compilerOptions": {
	  "module": "Node16",
	  "target": "ES2022",
	  "outDir": "out",
	  "lib": ["ES2022"],
	  "sourceMap": true,
	  "rootDir": "src",
	  "strict": true,
	  "typeRoots": ["./node_modules/@types", "./types"],
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "resolveJsonModule": true,
	  "moduleResolution": "Node16",
	  "types": ["node", "vscode", "mocha"] // Add "mocha" here
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["node_modules", "out"]
  }